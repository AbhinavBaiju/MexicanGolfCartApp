ENVIRONMENT=dev

# Worker
WORKER_DIR=worker
WORKER_DB_NAME=mexican-golf-cart-db-dev
WORKER_ENV=dev
WORKER_DEPLOY_ARGS="--minify"
DEV_DB_SYNC_ENABLED=1
DEV_DB_SYNC_SOURCE_DB_NAME=mexican-golf-cart-db-prod
DEV_DB_SYNC_TARGET_DB_NAME=mexican-golf-cart-db-dev
DEV_DB_SYNC_REMOTE=1

# Shopify (shared)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# Admin (Cloudflare Pages)
ADMIN_DIR=apps/admin
ADMIN_PAGES_PROJECT=mexican-golf-cart-admin
ADMIN_PAGES_BRANCH=dev
ADMIN_ENV_FILE=apps/admin/.env
ADMIN_ENV_KEY=VITE_SHOPIFY_API_KEY

ADMIN_ENV_VALUE=${SHOPIFY_API_KEY}

# Shopify app (config + extensions)
SHOPIFY_DIR=apps/shopify/mexican-golf-cart
DEV_TUNNEL_PROVIDER=cloudflare-quick-tunnel

# Consistency checks (dev uses Shopify CLI tunnel URLs for application_url)
EXPECTED_SHOPIFY_API_KEY=${SHOPIFY_API_KEY}
EXPECTED_SHOPIFY_APP_URL=https://mexican-golf-cart-worker.explaincaption.workers.dev
# Leave empty in dev. Shopify CLI updates app URLs for the active dev store.
EXPECTED_APPLICATION_URL=
